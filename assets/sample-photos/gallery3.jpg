<svg xmlns="http://www.w3.org/2000/svg" width="300" height="400" viewBox="0 0 300 400">
  <defs>
    <linearGradient id="bg6" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#553C9A;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#F472B6;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="300" height="400" fill="url(#bg6)"/>
  
  <!-- Anime night scene -->
  <g fill="white" opacity="0.8">
    <!-- Moon -->
    <circle cx="220" cy="80" r="30" fill="rgba(255,255,255,0.6)"/>
    
    <!-- Stars -->
    <polygon points="50,60 52,66 58,66 53,70 55,76 50,72 45,76 47,70 42,66 48,66" fill="rgba(255,255,255,0.7)"/>
    <polygon points="100,40 102,46 108,46 103,50 105,56 100,52 95,56 97,50 92,46 98,46" fill="rgba(255,255,255,0.7)"/>
    <polygon points="250,50 252,56 258,56 253,60 255,66 250,62 245,66 247,60 242,56 248,56" fill="rgba(255,255,255,0.7)"/>
    
    <!-- Cosplayer in anime pose -->
    <circle cx="150" cy="180" r="30"/>
    <rect x="125" y="210" width="50" height="70" rx="8"/>
    
    <!-- Dynamic pose arms -->
    <rect x="100" y="220" width="20" height="50" rx="10" transform="rotate(-30 110 245)"/>
    <rect x="180" y="220" width="20" height="50" rx="10" transform="rotate(45 190 245)"/>
    
    <!-- Flowing cape -->
    <path d="M130 230 Q100 220 80 250 Q90 280 120 270 Q150 260 130 230" fill="rgba(255,255,255,0.5)"/>
  </g>
  
  <text x="150" y="340" font-family="Arial, sans-serif" font-size="16" font-weight="bold" text-anchor="middle" fill="white">Anime Night</text>
  <text x="150" y="360" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="rgba(255,255,255,0.9)">Character Performance</text>
</svg>